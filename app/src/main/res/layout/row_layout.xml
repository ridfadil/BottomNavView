<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_row_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="@dimen/width_row_image"
                android:layout_height="@dimen/height_row_image"
                android:layout_margin="@dimen/margin_row_image"
                android:src="@drawable/cover" />

            <TextView
                android:id="@+id/tv_judulJurnal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_textview"
                android:layout_toRightOf="@id/cover"
                android:text="@string/judul"
                android:textSize="@dimen/size_row_juduljurnal" />

            <TextView
                android:id="@+id/tv_lastIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_judulJurnal"
                android:layout_marginLeft="@dimen/marginleft_row_lastissue"
                android:layout_toRightOf="@id/cover"
                android:text="@string/last_issue"
                android:textSize="@dimen/size_row_lastissue" />

            <TextView
                android:id="@+id/tv_issn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_lastIssue"
                android:layout_marginLeft="@dimen/margin_row_issn"
                android:layout_marginTop="@dimen/margin_row_issn"
                android:layout_toRightOf="@id/cover"
                android:text="@string/issn" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>